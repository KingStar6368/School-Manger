@using School_Manger.Models.PageView
@model AdminNONChildDriver
@{
    ViewData["Title"] = "اختصاص دادن راننده به دانش آموز";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-2">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold text-primary mb-2 fs-2">
                <i class="bi bi-person-badge"></i> 🚍 اختصاص دادن راننده به دانش آموز
            </h2>
            <p class="lead text-secondary fs-5">برای اختصاص راننده به دانش‌آموز، روی ردیف مورد نظر کلیک کنید یا شناسه را به صورت دستی وارد نمایید.</p>
        </div>
    </div>
    <!-- راننده‌ها -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="border rounded-4 p-2 bg-white shadow-sm">
                <h5 class="text-primary text-center mb-3 fw-bold fs-4">
                    🚗 لیست راننده‌ها
                </h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center align-middle table-hover w-100 fs-5">
                        <thead class="table-primary sticky-top">
                            <tr>
                                <th>شناسه</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>کد ملی</th>
                                <th>صندلی خالی</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Driver in Model.AvailableDrivers)
                            {
                                <tr onclick="DriverRowClick(@Driver.Id)" style="cursor:pointer;">
                                    <td>@Driver.Id</td>
                                    <td>@Driver.Name</td>
                                    <td>@Driver.LastName</td>
                                    <td>@Driver.NationCode</td>
                                    <td><span class="badge bg-success fs-5">@Driver.AvailableSeats 🎟️</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- دانش‌آموزان -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="border rounded-4 p-2 bg-white shadow-sm">
                <h5 class="text-primary text-center mb-3 fw-bold fs-4">
                    🎓 لیست دانش‌آموزان
                </h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center align-middle table-hover w-100 fs-5">
                        <thead class="table-primary sticky-top">
                            <tr>
                                <th>شناسه</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>کدملی</th>
                                <th>مدرسه</th>
                                <th>مقطع</th>
                                <th>آدرس</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Child in Model.NonDivers)
                            {
                                <tr onclick="ChildRowClick(@Child.Id)" style="cursor:pointer;">
                                    <td>@Child.Id</td>
                                    <td>@Child.FirstName</td>
                                    <td>@Child.LastName</td>
                                    <td>@Child.NationalCode</td>
                                    <td>@Child.SchoolId</td>
                                    <td>@Child.Class</td>
        @*                             <td>@Child.Path.Location1.Address</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- فرم مرکزی پایین -->
    <div class="row mb-4">
        <div class="col-12 d-flex align-items-center justify-content-center">
            <div class="border rounded-4 p-4 bg-white shadow-lg w-100" style="max-width:600px;">
                <h5 class="text-center mb-4 text-success fw-bold fs-4">
                    <i class="bi bi-arrow-left-right"></i> 🔗 ارتباط راننده و دانش‌آموز
                </h5>
                <form method="post" asp-action="AssignDriver">
                    <div class="mb-3">
                        <label for="DriverId" class="form-label fw-semibold fs-5">شناسه راننده 🚘</label>
                        <input id="DriverId" name="DriverId" type="number" class="form-control form-control-lg text-center fs-5" placeholder="شناسه راننده را وارد کنید" required />
                    </div>
                    <div class="mb-4">
                        <label for="StudentId" class="form-label fw-semibold fs-5">شناسه دانش آموز 🎒</label>
                        <input id="StudentId" name="StudentId" type="number" class="form-control form-control-lg text-center fs-5" placeholder="شناسه دانش‌آموز را وارد کنید" required />
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success btn-lg fw-bold fs-5">
                            <i class="bi bi-check-circle"></i> ثبت
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary fw-bold fs-5">
                            <i class="bi bi-arrow-return-left"></i> بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function ChildRowClick(Id){
            document.getElementById('StudentId').value = Id;
        }
        function DriverRowClick(Id){
            document.getElementById('DriverId').value = Id
        }
    </script>
}
