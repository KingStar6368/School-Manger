@using School_Manger.Extension
@model School_Manger.Models.ChildInfo
@{
    ViewData["Title"] = "صدور قبض";
    Layout = "_AdminLayout";
}

<div class="container bg-dark text-white mt-4" dir="rtl">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>صدور قبض برای: @Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateBill" asp-controller="Bills" method="post">
                <input type="hidden" name="ChildId" value="@Model.Id" />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">عنوان قبض</label>
                        <input type="text" name="Name" class="form-control bg-dark text-white" placeholder="مثلاً شهریه مهر ماه" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">مبلغ کل (تومان)</label>
                        <input type="number" name="TotalPrice" class="form-control bg-dark text-white" required />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">مهلت پرداخت</label>
                        <input type="date" name="BillExpiredTime" class="form-control bg-dark text-white" required />
                    </div>
                </div>
                <button type="submit" class="btn btn-success">صدور قبض</button>
                <input name="Child" type="hidden" value="@Model.EnCript()"/>
                <a asp-controller="Parents" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">بازگشت</a>
            </form>
        </div>
    </div>
    @* List of Current Bills *@
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>قبض های : @Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-body">
            <table class="table-responsive table table-hover">
                <thead>
                    <tr>
                        <th>ردیف</th>
                        <th>شناسه قرارداد</th>
                        <th>نام قبض</th>
                        <th>مبلغ کل</th>
                        <th>مبلغ پرداخت شده</th>
                        <th>وضعیت</th>
                        <th>زمان پرداخت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Bills.Count; i++)
                    {
                        var bill = Model.Bills[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@bill.ContractId</td>
                            <td>@bill.Name</td>
                            <td>@bill.TotalPrice</td>
                            <td>@bill.PaidPrice</td>
                            <td>
                                @if (bill.HasPaId)
                                {
                                    <span class="badge bg-success">پرداخت شده</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@bill.Status</span>
                                }
                            </td>
                            <td>
                                @(bill.HasPaId
                                    ? DateConverter.ToPersianString(bill.PaidTime)
                                    : DateConverter.ToPersianString(bill.BillExpiredTime))
                            </td>
                            <td> @* AdminAction *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
