@using School_Manger.Models
@model Parent
@{
    ViewData["Title"] = "جزئیات والدین";
    Layout = "_AdminLayout";
}

<!-- Add these to your _AdminLayout.cshtml head section -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<style>
    #routeMap {
        height: 400px;
        width: 100%;
        border-radius: 5px;
        margin-top: 15px;
    }

    .leaflet-container {
        font-family: inherit;
    }
</style>

<div class="container-fluid bg-dark text-white" dir="rtl">
    <!-- Parent Information Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3>اطلاعات والدین</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <p><strong>نام:</strong> @Model.ParentFirstName</p>
                </div>
                <div class="col-md-4">
                    <p><strong>نام خانوادگی:</strong> @Model.ParentLastName</p>
                </div>
                <div class="col-md-4">
                    <p><strong>کد ملی:</strong> @Model.ParentNationalCode</p>
                </div>
            </div>
            <div class="mt-3">
                <h5>جمع مبالغ پرداخت نشده:</h5>
                @if (Model.TotalPrice <= 0)
                {
                    <span class="badge bg-success fs-6">همه پرداخت ها انجام شده است</span>
                }
                else
                {
                    <span class="badge bg-danger fs-6">@Model.TotalPrice.ToString("N0") تومان</span>
                }
            </div>
        </div>
    </div>

    <!-- Children Information Card -->
    <div class="card">
        <div class="card-header bg-info text-white">
            <h3>لیست فرزندان</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ردیف</th>
                            <th>نام فرزند</th>
                            <th>کد ملی</th>
                            <th>تاریخ تولد</th>
                            <th>پایه تحصیلی</th>
                            <th>وضعیت پرداخت</th>
                            <th>مسیر سرویس</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var child in Model.Children.Select((c, i) => new { Index = i + 1, Child = c }))
                        {
                            <tr>
                                <td>@child.Index</td>
                                <td>@child.Child.FirstName @child.Child.LastName</td>
                                <td>@child.Child.NationalCode</td>
                                <td>@child.Child.BirthDate.ToShortDateString()</td>
                                <td>@child.Child.Class</td>
                                <td>
                                    @if (child.Child.HasPaid)
                                    {
                                        <span class="badge bg-success">پرداخت شده</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@child.Child.Price.ToString("N0") تومان</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary view-route"
                                            data-pickup="@child.Child.Path.Location1.Address"
                                            data-destination="@child.Child.Path.Location2.Address"
                                            data-pickup-lat="@child.Child.Path.Location1.Latitude"
                                            data-pickup-lng="@child.Child.Path.Location1.Longitude"
                                            data-dest-lat="@child.Child.Path.Location2.Latitude"
                                            data-dest-lng="@child.Child.Path.Location2.Longitude">
                                        <i class="bi bi-geo-alt"></i> مشاهده مسیر
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Parent" asp-area="Admin" class="btn btn-secondary">
            <i class="bi bi-arrow-right"></i> بازگشت به لیست
        </a>
    </div>
</div>

<!-- Route Modal -->
<div class="modal fade" id="routeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title">مسیر سرویس</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h6>محل سوار شدن:</h6>
                            <p id="pickupLocation"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h6>مقصد:</h6>
                            <p id="destinationLocation"></p>
                        </div>
                    </div>
                </div>

                <!-- Map Container -->
                <div id="routeMap"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add to your _AdminLayout.cshtml before </body> -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        $(document).ready(function() {
            var map;
            var pickupMarker, destinationMarker;

            $('.view-route').click(function() {
                // Update address text
                $('#pickupLocation').text($(this).data('pickup'));
                $('#destinationLocation').text($(this).data('destination'));

                // Get coordinates from data attributes
                var pickupLat = parseFloat($(this).data('pickup-lat'));
                var pickupLng = parseFloat($(this).data('pickup-lng'));
                var destLat = parseFloat($(this).data('dest-lat'));
                var destLng = parseFloat($(this).data('dest-lng'));

                // Initialize or reuse map
                if (!map) {
                    map = L.map('routeMap').setView([pickupLat, pickupLng], 13);
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>'
                    }).addTo(map);
                }

                // Clear existing markers
                if (pickupMarker) map.removeLayer(pickupMarker);
                if (destinationMarker) map.removeLayer(destinationMarker);

                // Add new markers
                pickupMarker = L.marker([pickupLat, pickupLng], {
                    icon: L.divIcon({
                        html: '<i class="bi bi-geo-alt-fill text-danger fs-4"></i>',
                        className: 'd-flex justify-content-center align-items-center',
                        iconSize: [30, 30]
                    })
                }).addTo(map).bindPopup("محل سوار شدن");

                destinationMarker = L.marker([destLat, destLng], {
                    icon: L.divIcon({
                        html: '<i class="bi bi-geo-alt-fill text-success fs-4"></i>',
                        className: 'd-flex justify-content-center align-items-center',
                        iconSize: [30, 30]
                    })
                }).addTo(map).bindPopup("مقصد");

                // Add line between points
                var routeLine = L.polyline(
                    [[pickupLat, pickupLng], [destLat, destLng]],
                    {color: 'blue', dashArray: '5, 5'}
                ).addTo(map);

                // Fit map to show both markers
                var bounds = L.latLngBounds([
                    [pickupLat, pickupLng],
                    [destLat, destLng]
                ]);
                map.fitBounds(bounds, { padding: [50, 50] });

                $('#routeModal').modal('show');
            });

            // Clear map when modal closes
            $('#routeModal').on('hidden.bs.modal', function () {
                if (map) {
                    map.remove();
                    map = null;
                }
            });
        });
    </script>
}