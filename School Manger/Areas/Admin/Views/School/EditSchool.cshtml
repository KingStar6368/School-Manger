@using School_Manager.Core.Services.Interfaces
@using School_Manager.Core.ViewModels.FModels
@inject ISchoolService SchoolService;
@model SchoolUpdateDto
@{
    ViewData["Title"] = "ویرایش مدرسه";
    Layout = "_AdminLayout";
}

<!-- Leaflet Styles -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<div class="container-fluid bg-dark text-white py-4" dir="rtl">
    <div class="card bg-dark text-white shadow-lg rounded-4 border-primary mb-4">
        <div class="card-header bg-primary bg-gradient d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">
                <i class="bi bi-pencil-square fs-4 me-2"></i>ویرایش مدرسه:
                <span class="text-warning">@Model.Name</span>
            </h4>
            <form asp-action="Index" class="d-inline">
                <button type="submit" class="btn btn-outline-light fw-bold shadow-sm">
                    <i class="bi bi-arrow-right-circle me-1"></i>بازگشت
                </button>
            </form>
        </div>
        <div class="card-body">
            <form asp-action="EditSchool" method="post">
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                <div class="row g-4">
                    <!-- School Basic Information -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-building me-1"></i>نام مدرسه
                            </label>
                            <input type="text" class="form-control bg-dark text-white border-secondary"
                                   asp-for="@Model.Name" value="@Model.Name" required
                                   placeholder="نام مدرسه را وارد کنید" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-person-badge me-1"></i>نام مدیر
                            </label>
                            <input type="text" class="form-control bg-dark text-white border-secondary"
                                   asp-for="@Model.ManagerName" value="@Model.ManagerName" required
                                   placeholder="نام مدیر مدرسه را وارد کنید" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-star me-1"></i>امتیاز
                            </label>
                            <select asp-for="Rate" class="form-select bg-dark text-white border-secondary">
                                @for (int i = 0; i <= 5; i++)
                                {
                                    <option value="@i">
                                        <i class="bi bi-star-fill text-warning me-1"></i>@i ستاره
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="Rate" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Shifts Section -->
                    <div class="col-md-6">
                        <div class="card bg-secondary border-warning h-100">
                            <div class="card-header bg-warning bg-gradient text-dark">
                                <h6 class="mb-0 fw-bold">
                                    <i class="bi bi-clock-history me-1"></i>شیفت‌های مدرسه
                                </h6>
                            </div>
                            <div class="card-body">
                                @{
                                    var Shifts = await SchoolService.GetSchoolShifts(Model.Id);
                                }

                                @if (Shifts.Count > 0)
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold text-white">
                                            <i class="bi bi-list-check me-1"></i>شیفت‌های فعلی:
                                        </label>
                                        <div class="border border-warning rounded p-3 bg-dark">
                                            @foreach (var shift in Shifts)
                                            {
                                                <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-dark rounded">
                                                    <div>
                                                        <i class="bi bi-clock text-warning me-2"></i>
                                                        <strong>@shift.Name</strong>
                                                        <small class="text-white-50">(@shift.Start - @shift.End)</small>
                                                    </div>
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-people me-1"></i>فعال
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning text-center">
                                        <i class="bi bi-exclamation-triangle fs-4 d-block mb-2"></i>
                                        <p class="mb-2">این مدرسه شیفت ندارد</p>
                                    </div>
                                }

                                <a class="btn btn-warning fw-bold w-100" asp-action="Shift" asp-route-id="@Model.Id">
                                    <i class="bi bi-plus-circle me-1"></i>مدیریت شیفت‌ها
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Address and Location Section -->
                    <div class="col-12">
                        <div class="card bg-dark border-info">
                            <div class="card-header bg-info bg-gradient">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-geo-alt fs-4 me-2"></i>موقعیت مکانی مدرسه
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="bi bi-geo me-1"></i>آدرس مدرسه
                                            </label>
                                            <textarea asp-for="@Model.Address" class="form-control bg-dark text-white border-secondary"
                                                      rows="3" placeholder="آدرس کامل مدرسه را وارد کنید"></textarea>
                                            <span asp-validation-for="@Model.Address" class="text-danger small"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">
                                                        <i class="bi bi-globe me-1"></i>عرض جغرافیایی
                                                    </label>
                                                    <div class="input-group">
                                                        <span class="input-group-text bg-dark text-white border-secondary">
                                                            <i class="bi bi-geo-alt"></i>
                                                        </span>
                                                        <input asp-for="@Model.Latitude" id="Latitude"
                                                               class="form-control bg-dark text-white border-secondary" readonly />
                                                    </div>
                                                    <span asp-validation-for="@Model.Latitude" class="text-danger small"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">
                                                        <i class="bi bi-globe me-1"></i>طول جغرافیایی
                                                    </label>
                                                    <div class="input-group">
                                                        <span class="input-group-text bg-dark text-white border-secondary">
                                                            <i class="bi bi-geo-alt"></i>
                                                        </span>
                                                        <input asp-for="@Model.Longitude" id="Longitude"
                                                               class="form-control bg-dark text-white border-secondary" readonly />
                                                    </div>
                                                    <span asp-validation-for="@Model.Longitude" class="text-danger small"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="alert alert-info d-flex align-items-center">
                                            <i class="bi bi-info-circle fs-5 me-3"></i>
                                            <div>
                                                <strong>راهنما:</strong> برای انتخاب موقعیت مدرسه، روی نقشه کلیک کنید.
                                                مختصات به طور خودکار در فیلدهای بالا ثبت می‌شود.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">
                                            <i class="bi bi-map me-1"></i>انتخاب موقعیت روی نقشه
                                        </label>
                                        <div id="map" style="height: 300px;" class="rounded shadow-sm border border-secondary"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12 mt-4">
                        <div class="d-flex justify-content-start gap-3">
                            <button type="submit" class="btn btn-success fw-bold shadow-sm px-4">
                                <i class="bi bi-check-circle me-1"></i>ذخیره تغییرات
                            </button>
                            <button type="reset" class="btn btn-outline-warning fw-bold shadow-sm px-4">
                                <i class="bi bi-arrow-clockwise me-1"></i>بازنشانی فرم
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info fw-bold shadow-sm px-4">
                                <i class="bi bi-eye me-1"></i>مشاهده جزئیات
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Initialize Leaflet map
        var map = L.map('map').setView([34.094, 49.698], 13); // Default to Arak

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        var marker;

        function onMapClick(e) {
            var lat = e.latlng.lat.toFixed(6);
            var lon = e.latlng.lng.toFixed(6);

            if (marker) {
                marker.setLatLng(e.latlng);
            } else {
                marker = L.marker(e.latlng, {
                    icon: L.divIcon({
                        className: 'school-marker',
                        html: '<div style="background:#dc3545;color:white;padding:4px 8px;border-radius:6px;border:2px solid white;"><i class="bi bi-building-fill me-1"></i>مدرسه</div>',
                        iconSize: [60, 30]
                    })
                }).addTo(map);
            }

            document.getElementById('Latitude').value = lat;
            document.getElementById('Longitude').value = lon;

            // Show popup with coordinates
            marker.bindPopup(`
                <div class="text-center">
                    <i class="bi bi-building-fill text-danger me-1"></i>
                    <strong>موقعیت مدرسه</strong><br>
                    عرض: ${lat}<br>
                    طول: ${lon}
                </div>
            `).openPopup();
        }

        map.on('click', onMapClick);

        document.addEventListener('DOMContentLoaded', function() {
            // Set initial marker position if latitude and longitude are available
            var lat = document.getElementById('Latitude').value;
            var lon = document.getElementById('Longitude').value;
            if (lat && lon) {
                var initialLatLng = L.latLng(lat, lon);
                marker = L.marker(initialLatLng, {
                    icon: L.divIcon({
                        className: 'school-marker',
                        html: '<div style="background:#dc3545;color:white;padding:4px 8px;border-radius:6px;border:2px solid white;"><i class="bi bi-building-fill me-1"></i>مدرسه</div>',
                        iconSize: [60, 30]
                    })
                }).addTo(map);
                map.setView(initialLatLng, 15);

                marker.bindPopup(`
                    <div class="text-center">
                        <i class="bi bi-building-fill text-danger me-1"></i>
                        <strong>موقعیت فعلی مدرسه</strong><br>
                        عرض: ${lat}<br>
                        طول: ${lon}
                    </div>
                `).openPopup();
            }

            // Add hover effects
            $('.btn').hover(
                function() {
                    $(this).addClass('shadow');
                },
                function() {
                    $(this).removeClass('shadow');
                }
            );

            // Add loading state to submit button
            $('form').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                const originalHtml = submitBtn.html();
                submitBtn.html('<i class="bi bi-hourglass-split me-1"></i>در حال ذخیره...');
                submitBtn.prop('disabled', true);
            });
        });
    </script>
}

<style>
    .card {
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

    .form-control, .form-select {
        border: 1px solid #495057;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

    .alert {
        border: none;
        border-radius: 8px;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5em 0.8em;
    }

    /* Leaflet popup customization */
    .leaflet-popup-content {
        color: #fff;
        background-color: #222;
        padding: 1rem;
        border-radius: 8px;
        font-family: inherit;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .card-body {
            padding: 1rem;
        }

        .btn {
            margin-bottom: 0.5rem;
            width: 100%;
        }

        .d-flex.gap-3 {
            gap: 0.5rem !important;
            flex-direction: column;
        }

        #map {
            height: 250px;
        }
    }
</style>