@using School_Manager.Core.ViewModels.FModels
@model List<SchoolDto>

@{
    ViewData["Title"] = "مدیریت مدارس";
    Layout = "_AdminLayout";
}

<div class="container-fluid bg-dark text-white py-4" dir="rtl">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-2">
                        <i class="bi bi-building fs-1 text-primary me-2"></i>مدیریت مدارس
                    </h2>
                    <p class="text-white-50 mb-0">
                        <i class="bi bi-info-circle me-1"></i>مدیریت اطلاعات مدارس و شیفت‌های آموزشی
                    </p>
                </div>
                <div>
                    <span class="badge bg-primary fs-6 p-3">
                        <i class="bi bi-building me-1"></i>@Model.Count مدرسه
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-building fs-1 d-block mb-2"></i>
                    <h4 class="mb-1">@Model.Count</h4>
                    <p class="mb-0">مدارس ثبت‌شده</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill fs-1 d-block mb-2"></i>
                    <h4 class="mb-1">@Model.Average(s => s.Rate).ToString("0.0")</h4>
                    <p class="mb-0">میانگین امتیاز</p>
                </div>
            </div>
        </div>
@*         <div class="col-md-3 mb-3">
            <div class="card bg-info text-white shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-people fs-1 d-block mb-2"></i>
                    <h4 class="mb-1">@Model.Sum(s => s.StudentsCount)</h4>
                    <p class="mb-0">دانش‌آموزان</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-clock fs-1 d-block mb-2"></i>
                    <h4 class="mb-1">@Model.Sum(s => s.Shifts?.Count ?? 0)</h4>
                    <p class="mb-0">شیفت فعال</p>
                </div>
            </div>
        </div> *@
    </div>

    <!-- Main Table -->
    <div class="card bg-dark text-white shadow-lg rounded-4 border-primary">
        <div class="card-header bg-primary bg-gradient d-flex justify-content-between align-items-center py-3">
            <h4 class="mb-0 fw-bold">
                <i class="bi bi-list-ul fs-4 me-2"></i>لیست مدارس
            </h4>
            <div>
                <a asp-action="Create" class="btn btn-success btn-sm fw-bold shadow-sm px-3">
                    <i class="bi bi-plus-circle me-1"></i>مدرسه جدید
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- Search and Filters -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-secondary text-white border-secondary">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="جستجوی مدارس..." id="searchInput">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select bg-dark text-white border-secondary" id="ratingFilter">
                        <option value="">همه امتیازها</option>
                        <option value="5">⭐⭐⭐⭐⭐ (5)</option>
                        <option value="4">⭐⭐⭐⭐ (4)</option>
                        <option value="3">⭐⭐⭐ (3)</option>
                        <option value="2">⭐⭐ (2)</option>
                        <option value="1">⭐ (1)</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select bg-dark text-white border-secondary" id="sortSelect">
                        <option value="name">مرتب‌سازی بر اساس نام</option>
                        <option value="rating">مرتب‌سازی بر اساس امتیاز</option>
                        <option value="students">مرتب‌سازی بر اساس دانش‌آموز</option>
                    </select>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-bordered table-hover align-middle text-center mb-0" id="schoolsTable">
                        <thead class="table-light text-dark">
                            <tr>
                                <th class="fw-bold"><i class="bi bi-hash me-1"></i>ردیف</th>
                                <th><i class="bi bi-building me-1"></i>نام مدرسه</th>
                                <th><i class="bi bi-person-badge me-1"></i>نام مدیر</th>
                                <th><i class="bi bi-star me-1"></i>امتیاز</th>
@*                                 <th><i class="bi bi-people me-1"></i>دانش‌آموزان</th>
                                <th><i class="bi bi-clock me-1"></i>شیفت‌ها</th> *@
                                <th><i class="bi bi-geo-alt me-1"></i>آدرس</th>
                                <th class="fw-bold"><i class="bi bi-gear me-1"></i>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var school in Model.Select((s, i) => new { Index = i + 1, School = s }))
                            {
                                <tr>
                                    <td class="fw-bold text-info">@school.Index</td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-building text-warning me-2"></i>
                                            <strong>@school.School.Name</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <i class="bi bi-person-circle text-info me-2"></i>
                                            @school.School.ManagerName
                                        </div>
                                    </td>
                                    <td>
                                        <div class="rating" title="امتیاز: @school.School.Rate از 5">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= school.School.Rate ? "-fill" : "") text-warning fs-6"></i>
                                            }
                                            <small class="text-white-50 d-block mt-1">(@school.School.Rate.ToString("0.0"))</small>
                                        </div>
                                    </td>
                                  @*   <td>
                                        <span class="badge bg-info text-dark fw-bold p-2">
                                            <i class="bi bi-person me-1"></i>@school.School.StudentsCount
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary fw-bold p-2">
                                            <i class="bi bi-clock me-1"></i>@(school.School.Shifts?.Count ?? 0)
                                        </span>
                                    </td> *@
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@school.School.Address.Address">
                                            <i class="bi bi-geo-alt text-success me-1"></i>
                                            @school.School.Address.Address
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="EditSchool" asp-route-SchoolId="@school.School.Id"
                                               class="btn btn-sm btn-outline-warning rounded-pill shadow-sm"
                                               data-bs-toggle="tooltip" title="ویرایش مدرسه">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@school.School.Id"
                                               class="btn btn-sm btn-outline-info rounded-pill shadow-sm"
                                               data-bs-toggle="tooltip" title="مشاهده جزئیات">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ManageShifts" asp-route-schoolId="@school.School.Id"
                                               class="btn btn-sm btn-outline-primary rounded-pill shadow-sm"
                                               data-bs-toggle="tooltip" title="مدیریت شیفت‌ها">
                                                <i class="bi bi-clock-history"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-white-50">
                        <i class="bi bi-info-circle me-1"></i>
                        نمایش @Model.Count مورد از @Model.Count مدرسه
                    </div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link bg-dark text-white border-secondary" href="#">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link bg-primary border-primary" href="#">1</a></li>
                            <li class="page-item"><a class="page-link bg-dark text-white border-secondary" href="#">2</a></li>
                            <li class="page-item"><a class="page-link bg-dark text-white border-secondary" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link bg-dark text-white border-secondary" href="#">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center fw-bold py-4">
                    <i class="bi bi-building fs-1 d-block mb-3"></i>
                    <h5>مدرسه‌ای یافت نشد</h5>
                    <p class="mb-0">هنوز هیچ مدرسه‌ای در سیستم ثبت نشده است.</p>
                    <a asp-action="Create" class="btn btn-success mt-3">
                        <i class="bi bi-plus-circle me-1"></i>افزودن اولین مدرسه
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Search functionality
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#schoolsTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Rating filter
            $('#ratingFilter').on('change', function() {
                var rating = $(this).val();
                if (rating) {
                    $('#schoolsTable tbody tr').hide();
                    $('#schoolsTable tbody tr').each(function() {
                        var rowRating = $(this).find('.rating').attr('title').match(/\d+/)[0];
                        if (rowRating === rating) {
                            $(this).show();
                        }
                    });
                } else {
                    $('#schoolsTable tbody tr').show();
                }
            });

            // Sort functionality
            $('#sortSelect').on('change', function() {
                var sortBy = $(this).val();
                var $tbody = $('#schoolsTable tbody');
                var rows = $tbody.find('tr').get();

                rows.sort(function(a, b) {
                    var aVal, bVal;

                    switch(sortBy) {
                        case 'name':
                            aVal = $(a).find('td:eq(1)').text().toLowerCase();
                            bVal = $(b).find('td:eq(1)').text().toLowerCase();
                            return aVal.localeCompare(bVal);
                        case 'rating':
                            aVal = parseFloat($(a).find('.rating').attr('title').match(/\d+\.?\d*/)[0]);
                            bVal = parseFloat($(b).find('.rating').attr('title').match(/\d+\.?\d*/)[0]);
                            return bVal - aVal;
                        case 'students':
                            aVal = parseInt($(a).find('td:eq(4) .badge').text());
                            bVal = parseInt($(b).find('td:eq(4) .badge').text());
                            return bVal - aVal;
                    }
                });

                $.each(rows, function(index, row) {
                    $tbody.append(row);
                });
            });

            // Add hover effects to table rows
            $('tbody tr').hover(
                function() {
                    $(this).addClass('bg-secondary bg-opacity-25');
                },
                function() {
                    $(this).removeClass('bg-secondary bg-opacity-25');
                }
            );

            // Add loading animation to buttons
            $('.btn').on('click', function() {
                var btn = $(this);
                var originalHtml = btn.html();
                btn.html('<i class="bi bi-hourglass-split me-1"></i>در حال پردازش...');
                btn.prop('disabled', true);

                setTimeout(function() {
                    btn.html(originalHtml);
                    btn.prop('disabled', false);
                }, 1500);
            });
        });
    </script>
}

<style>
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 1rem 0.75rem;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.1) !important;
        transform: scale(1.01);
        transition: all 0.3s ease;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5em 0.8em;
    }

    .rating {
        direction: ltr;
        unicode-bidi: bidi-override;
    }

    .card {
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

    /* Custom scrollbar */
    .table-responsive::-webkit-scrollbar {
        height: 8px;
    }

    .table-responsive::-webkit-scrollbar-track {
        background: #2d3748;
        border-radius: 4px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: #4a5568;
        border-radius: 4px;
    }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #718096;
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.9rem;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }

        .d-flex.gap-2 {
            gap: 0.25rem !important;
        }

        .card-body {
            padding: 1rem;
        }

        .text-truncate {
            max-width: 150px !important;
        }
    }
</style>