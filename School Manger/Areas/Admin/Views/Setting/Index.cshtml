@using ServiceBase.Setting
@model IEnumerable<SettingDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تنظیمات سیستم";
}

<h2>تنظیمات سیستم</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>نوع تنظیم</th>
            <th>مقدار</th>
            <th>نوع مقدار</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SettingType</td>
                <td>@item.Value</td>
                <td>@item.ValueType?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SettingType" class="btn btn-sm btn-primary">ویرایش</a>
                    <form asp-action="Delete" asp-route-id="@item.SettingType" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('آیا مطمئن هستید؟')">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">افزودن تنظیم جدید</a>
