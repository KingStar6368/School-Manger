@using School_Manger.Extension;
@model IEnumerable<School_Manager.Core.ViewModels.FModels.TariffDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "تعرفه‌ها";
}

<div class="card">
    <div class="card-header bg-info">
        <h2>تعرفه‌ها</h2>
    </div>
    <div class="card-body bg-dark">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>از کیلومتر</th>
                    <th>تا کیلومتر</th>
                    <th>قیمت (ریال)</th>
                    <th>از تاریخ</th>
                    <th>تا تاریخ</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FromKilometer</td>
                        <td>@item.ToKilometer</td>
                        <td>@item.Price</td>
                        <td>@item.FromDate.ToPersianString()</td>
                        <td>@item.ToDate.ToPersianString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a asp-action="Create" class="btn btn-success">افزودن تعرفه جدید</a>