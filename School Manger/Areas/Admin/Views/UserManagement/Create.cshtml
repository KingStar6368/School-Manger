@{
    var userType = ViewBag.UserType as string;
    ViewData["Title"] = "ایجاد کاربر " + (userType == "parent" ? "والد" : "راننده");
    Layout = "_AdminLayout";
}

<div class="card bg-dark text-white">
    <div class="card-header @(userType == "parent" ? "bg-primary" : "bg-info")">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" name="userType" value="@userType" />

            <div class="form-group mb-3">
                <label>نام کاربری</label>
                <input name="username" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>رمز عبور</label>
                <input name="password" type="password" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>شماره تماس</label>
                <input name="phone" class="form-control" required />
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">ذخیره</button>
                <a href="@Url.Action(userType == "parent" ? "Parents" : "Drivers")"
                   class="btn btn-secondary">انصراف</a>
            </div>
        </form>
    </div>
</div>