@using School_Manger.Models.PageView
@model AdminUser
@{
    var userType = ViewBag.UserType?.ToString() ?? "Parent";
    ViewData["Title"] = "ایجاد کاربر " + (userType == "Parent" ? "👨‍👩‍👧 والد" : "🚗 راننده");
    Layout = "_AdminLayout";
}
<div class="card bg-dark text-white shadow-lg rounded-4 mb-4 border-primary border-2">
    <div class="card-header @(userType == "Parent" ? "bg-primary" : "bg-info") d-flex justify-content-center align-items-center">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form action="Create" method="post">
            <input type="hidden" asp-for="Type" value="@userType" />

            <div class="row g-4">
                <div class="col-md-6">
                    @if (userType == "Parent")
                    {
                        <div class="mb-3">
                            <label class="form-label">👤 نام</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="User.FirstName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">👥 نام خانوادگی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="User.LastName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🆔 کد ملی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="User.UserName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🏠 آدرس</label>
                            <textarea asp-for="Parent.Address" class="form-control" rows="2"></textarea>
                        </div>
                        <input value="@userType"  hidden />
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label">👤 نام</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="User.FirstName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">👥 نام خانوادگی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="User.LastName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">👨‍👦 نام پدر</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="Driver.FutherName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎂 تاریخ تولد</label><label style="color:red;font-size:20px">*</label>
                            @* <input asp-for="Driver.BirthDate" type="date" class="form-control form-control-lg" required /> *@
                            <input name="BirthDate" class="persian-date form-control bg-secondary text-white" required />
                            <input type="hidden" class="gregorian-date" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🆔 کد ملی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="User.UserName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎓 مدرک تحصیلی</label>
                            <input asp-for="Driver.Education" class="form-control form-control-lg" data-val="false" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎓 شماره گواهینامه</label>
                            <input asp-for="Driver.CertificateId" class="form-control form-control-lg" data-val="false" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">📝 توضیحات</label>
                            <textarea asp-for="Driver.Descriptions" data-val="false" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🏠 آدرس</label>
                            <textarea asp-for="Driver.Address" data-val="false" class="form-control" rows="2" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🆔 شماره پرونده</label><label style="color:red;font-size:20px">*</label>
                            <textarea asp-for="Driver.Code" data-val="false" class="form-control" rows="2"></textarea>
                        </div>
                        <input value="@userType"  hidden />
                    }
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">🔒 رمز عبور</label><label style="color:red;font-size:20px">*</label>
                        <input asp-for="User.Password" type="password" id="password" class="form-control form-control-lg" minlength="8" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">📞 شماره تماس</label><label style="color:red;font-size:20px">*</label>
                        <input asp-for="User.Mobile" class="form-control form-control-lg" required />
                    </div>

                    @if (userType != "Parent")
                    {
                        <hr />
                        <h5 class="text-info"><i class="bi bi-car-front-fill"></i> مشخصات ماشین</h5>
                        <div class="mb-3">
                            <label class="form-label">🚘 نام ماشین</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="Driver.Car.Name" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🔢 شماره پلاک</label><label style="color:red;font-size:20px">*</label>
                            @await Html.PartialAsync("_CarPlateBox")
                            @* <input asp-for="Driver.Car.PlateNumber" class="form-control form-control-lg" /> *@
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎨 رنگ ماشین</label>
                            <input asp-for="Driver.Car.Color" data-val="false" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">💺 تعداد صندلی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="Driver.Car.SeatNumber" type="number" class="form-control form-control-lg" required/>
                        </div>

                        <hr />
                        <h5 class="text-info"><i class="bi bi-bank2"></i> مشخصات حساب بانکی</h5>
                        <div class="mb-3">
                            <label class="form-label">🏦 شماره حساب</label>
                            <input asp-for="Driver.BankAccount" data-val="false" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🔢 شماره شبا/کارت</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="Driver.BankAccountNumber" class="form-control form-control-lg" />
                        </div>
                    }
                </div>
            </div>

            <div class="form-group text-center mt-4 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-success col-md-2">
                    <i class="bi bi-save2 me-1"></i> ذخیره
                </button>
                <a href="@Url.Action(userType == "Parent" ? "Parents" : "Drivers")"
                   class="btn btn-secondary col-md-2">
                    <i class="bi bi-x-circle me-1"></i> انصراف
                </a>
            </div>
        </form> 
    </div>
</div>
@section Scripts {
    <script>
                 // Password validation
        document.getElementById('password').addEventListener('input', function(e) {
            const passwordHelp = document.getElementById('passwordHelp');

            if (this.value.length < 8) {
                this.classList.remove('border-success', 'is-valid');
                this.classList.add('border-danger', 'is-invalid');
                passwordHelp.textContent = 'رمز عبور باید حداقل ۸ کاراکتر داشته باشد';
                passwordHelp.className = 'form-text text-danger';
            } else {
                this.classList.remove('border-danger', 'is-invalid');
                this.classList.add('border-success', 'is-valid');
                passwordHelp.textContent = 'رمز عبور معتبر است';
                passwordHelp.className = 'form-text text-success';
            }
        });
    </script>
}