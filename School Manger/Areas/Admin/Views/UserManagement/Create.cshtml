@using School_Manger.Models.PageView
@model AdminUser
@using School_Manager.Core.Services.Interfaces
@inject IShiftService ShiftService
@inject ISchoolService SchoolService
@{
    var userType = ViewBag.UserType?.ToString() ?? "Parent";
    var allShifts = ShiftService.GetAllShifts();
    ViewData["Title"] = "ایجاد کاربر " + (userType == "Parent" ? "والد" : "راننده");
    Layout = "_AdminLayout";
}
<div class="card bg-dark text-white shadow-lg rounded-4 mb-4 border-primary border-2">
    <div class="card-header @(userType == "Parent" ? "bg-primary" : "bg-info") d-flex justify-content-center align-items-center">
        <h4 class="mb-0 fw-bold">
            <i class="bi @(userType == "Parent" ? "bi-people-fill" : "bi-steering-wheel") me-2"></i>@ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <form action="Create" method="post">
            <input type="hidden" asp-for="Type" value="@userType" />
            <div class="row g-4">
                <div class="col-md-6">
                    @if (userType == "Parent")
                    {
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person me-1"></i> نام</label><label class="text-danger fs-5">*</label>
                            <input asp-for="User.FirstName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person me-1"></i> نام خانوادگی</label><label class="text-danger fs-5">*</label>
                            <input asp-for="User.LastName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-credit-card me-1"></i> کد ملی</label><label class="text-danger fs-5">*</label>
                            <input asp-for="User.UserName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-house me-1"></i> آدرس</label>
                            <textarea asp-for="Parent.Address" class="form-control" rows="2"></textarea>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person me-1"></i> نام</label><label class="text-danger fs-5">*</label>
                            <input asp-for="User.FirstName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person me-1"></i> نام خانوادگی</label><label class="text-danger fs-5">*</label>
                            <input asp-for="User.LastName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person-standing me-1"></i> نام پدر</label><label class="text-danger fs-5">*</label>
                            <input asp-for="Driver.FutherName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-calendar-event me-1"></i> تاریخ تولد</label><label class="text-danger fs-5">*</label>
                            <input name="BirthDate" class="persian-date form-control bg-secondary text-white" required />
                            <input type="hidden" class="gregorian-date" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-credit-card me-1"></i> کد ملی</label><label class="text-danger fs-5">*</label>
                            <input asp-for="User.UserName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-mortarboard me-1"></i> مدرک تحصیلی</label>
                            <input asp-for="Driver.Education" class="form-control form-control-lg" data-val="false" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-file-text me-1"></i> شماره گواهینامه</label>
                            <input asp-for="Driver.CertificateId" class="form-control form-control-lg" data-val="false" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-card-text me-1"></i> توضیحات</label>
                            <textarea asp-for="Driver.Descriptions" data-val="false" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-house me-1"></i> آدرس</label><label class="text-danger fs-5">*</label>
                            <textarea asp-for="Driver.Address" data-val="false" class="form-control" rows="2" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-folder me-1"></i> شماره پرونده</label><label class="text-danger fs-5">*</label>
                            <textarea asp-for="Driver.Code" data-val="false" class="form-control" rows="2"></textarea>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-key me-1"></i> رمز عبور</label><label class="text-danger fs-5">*</label>
                        <input asp-for="User.Password" type="password" id="password" class="form-control form-control-lg" minlength="8" required />
                        <div class="form-text" id="passwordHelp"></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-telephone me-1"></i> شماره تماس</label><label class="text-danger fs-5">*</label>
                        <input asp-for="User.Mobile" class="form-control form-control-lg" required />
                    </div>
                    @if (userType != "Parent")
                    {
                        <hr />
                        <h5 class="text-info"><i class="bi bi-car-front me-2"></i> مشخصات ماشین</h5>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-car-front me-1"></i> نام ماشین</label><label class="text-danger fs-5">*</label>
                            <input asp-for="Driver.Car.Name" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-upc-scan me-1"></i> شماره پلاک</label><label class="text-danger fs-5">*</label>
                            @await Html.PartialAsync("_CarPlateBox")
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-palette me-1"></i> رنگ ماشین</label>
                            <input asp-for="Driver.Car.Color" data-val="false" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person-seat me-1"></i> تعداد صندلی</label><label class="text-danger fs-5">*</label>
                            <input asp-for="Driver.Car.SeatNumber" type="number" class="form-control form-control-lg" required />
                        </div>
                        <hr />
                        <h5 class="text-info"><i class="bi bi-bank me-2"></i> مشخصات حساب بانکی</h5>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-credit-card me-1"></i> شماره حساب</label>
                            <input asp-for="Driver.BankAccount" data-val="false" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-credit-card-2-front me-1"></i> شماره شبا/کارت</label><label class="text-danger fs-5">*</label>
                            <input asp-for="Driver.BankAccountNumber" class="form-control form-control-lg" />
                        </div>
                    }
                </div>
            </div>
            @if (userType != "Parent")
            {
                <hr />
                <h5 class="text-info"><i class="bi bi-clock me-2"></i> انتخاب شیفت‌ها</h5>
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-search me-1"></i> جستجو شیفت:</label>
                    <input type="text" id="shiftFilter" class="form-control mb-2" placeholder="جستجو شیفت..." onkeyup="filterShifts()" />
                    <div class="table-responsive">
                        <table class="table table-bordered table-dark table-striped" id="shiftTable">
                            <thead>
                                <tr>
                                    <th><i class="bi bi-check-square me-1"></i> انتخاب</th>
                                    <th><i class="bi bi-building me-1"></i> نام مدرسه</th>
                                    <th><i class="bi bi-clock me-1"></i> نام شیفت</th>
                                    <th><i class="bi bi-play-circle me-1"></i> زمان شروع</th>
                                    <th><i class="bi bi-stop-circle me-1"></i> زمان پایان</th>
                                    <th><i class="bi bi-person-seat me-1"></i> تعداد صندلی</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var shift in allShifts)
                                {
                                    <tr class="shift-row">
                                        <td>
                                            <input class="form-check-input shift-checkbox" type="checkbox" name="SelectedShiftIds" value="@shift.Id" id="shift_@shift.Id"
                                                   onchange="toggleSeatInput(@shift.Id)" />
                                        </td>
                                        <td>@SchoolService.GetSchool(shift.SchoolRef).Name</td>
                                        <td>
                                            <label class="form-check-label" for="shift_@shift.Id">
                                                @shift.Name
                                            </label>
                                        </td>
                                        <td>@shift.Start</td>
                                        <td>@shift.End</td>
                                        <td>
                                            <input type="number" name="ShiftSeats_@shift.Id" id="seat_@shift.Id" class="form-control"
                                                   style="width:90px;display:inline-block;" min="1" max="99" placeholder="صندلی"
                                                   disabled required />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <script>
                    function toggleSeatInput(shiftId) {
                        var checkbox = document.getElementById('shift_' + shiftId);
                        var seatInput = document.getElementById('seat_' + shiftId);
                        seatInput.disabled = !checkbox.checked;
                        if (!checkbox.checked) seatInput.value = '';
                    }
                    function filterShifts() {
                        var input = document.getElementById('shiftFilter');
                        var filter = input.value.toLowerCase();
                        var rows = document.querySelectorAll('#shiftTable .shift-row');
                        rows.forEach(function(row) {
                            var label = row.querySelector('.form-check-label').textContent.toLowerCase();
                            if (label.indexOf(filter) > -1) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        });
                    }
                </script>
            }
            <div class="form-group text-center mt-4 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-success col-md-2">
                    <i class="bi bi-check-circle me-1"></i> ذخیره
                </button>
                <a href="@Url.Action(userType == "Parent" ? "Parents" : "Drivers")"
                   class="btn btn-secondary col-md-2">
                    <i class="bi bi-x-circle me-1"></i> انصراف
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        // Password validation
        document.getElementById('password').addEventListener('input', function(e) {
            const passwordHelp = document.getElementById('passwordHelp');
            if (this.value.length < 8) {
                this.classList.remove('border-success', 'is-valid');
                this.classList.add('border-danger', 'is-invalid');
                passwordHelp.textContent = 'رمز عبور باید حداقل ۸ کاراکتر داشته باشد';
                passwordHelp.className = 'form-text text-danger';
            } else {
                this.classList.remove('border-danger', 'is-invalid');
                this.classList.add('border-success', 'is-valid');
                passwordHelp.textContent = 'رمز عبور معتبر است';
                passwordHelp.className = 'form-text text-success';
            }
        });
    </script>
}