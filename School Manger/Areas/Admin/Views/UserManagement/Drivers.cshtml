@using School_Manger.Models
@model List<LoginUser>
@{
    ViewData["Title"] = "🚦 مدیریت کاربران رانندگان";
    Layout = "_AdminLayout";
}

<div class="card bg-dark text-white shadow rounded">
    <div class="card-header bg-info d-flex justify-content-between align-items-center">
        <h4 class="mb-0">🚗 لیست رانندگان</h4>
        <a asp-action="Create" asp-route-type="Driver" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> کاربر جدید
        </a>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            @await Html.PartialAsync("_UsersTable", Model)
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                🚫 کاربری یافت نشد!
            </div>
        }
    </div>
</div>
