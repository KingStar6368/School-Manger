@using School_Manger.Extension;
@using School_Manger.Models.PageView
@using School_Manager.Core.Services.Interfaces
@using School_Manager.Core.ViewModels.FModels
@inject IShiftService ShiftService
@inject ISchoolService SchoolService;
@model UserEditDriver
@{
    ViewData["Title"] = "ویرایش راننده";
    Layout = "_AdminLayout";
    var allShifts = ShiftService.GetAllShifts();
    var driverShifts = (Model.GetType().GetProperty("DriverShifts") != null)
        ? ((IEnumerable<DriverShiftDto>)Model.GetType().GetProperty("DriverShifts").GetValue(Model)) ?? new List<DriverShiftDto>()
        : new List<DriverShiftDto>();
}
<div class="container mt-4 text-white">
    <div class="card bg-dark text-white shadow-lg rounded-4 border-primary mb-4">
        <div class="card-header bg-primary bg-gradient d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">
                ✏️ ویرایش کاربر راننده: <span class="text-warning">@Model.DriverUpdateDto.Name</span>
            </h4>
            <form action="@Url.Action("Drivers")" method="post">
                <input type="submit" class="btn btn-secondary fw-bold shadow-sm" value="🔙 بازگشت" />
            </form>
        </div>
        <div class="card-body">
            <form asp-action="EditDriver" onsubmit="FillHidden()" method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <input type="hidden" asp-for="DriverUpdateDto.Id" />
                        <input type="hidden" asp-for="UserUpdateDto.Id" />
                        <input type="hidden" asp-for="DriverUpdateDto.UserRef" value="@Model.UserUpdateDto.Id" />
                        <input type="hidden" asp-for="UserUpdateDto.IsActive" />
                        <div class="mb-3">
                            <label class="form-label">👤 نام</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="DriverUpdateDto.Name" id="DName" class="form-control form-control-lg" required />
                            <input asp-for="UserUpdateDto.FirstName" value="@Model.DriverUpdateDto.Name" id="UName" hidden required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">👥 نام خانوادگی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="DriverUpdateDto.LastName" id="DLastName" class="form-control form-control-lg" required />
                            <input asp-for="UserUpdateDto.LastName" value="@Model.DriverUpdateDto.LastName" id="ULastName" hidden required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">👨‍👦 نام پدر</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="DriverUpdateDto.FatherName" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎂 تاریخ تولد</label><label style="color:red;font-size:20px">*</label>
                            <label class="form-label">@Model.DriverUpdateDto.BirthDate.ToPersianString()</label>
                            <input name="BirthDate" class="persian-date form-control bg-secondary text-white" required />
                            <input type="hidden" value="@Model.DriverUpdateDto.BirthDate.ToPersianString()" class="gregorian-date" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🆔 کد ملی</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="DriverUpdateDto.NationCode" id="DserName" class="form-control form-control-lg" required />
                            <input asp-for="UserUpdateDto.UserName" value="@Model.DriverUpdateDto.NationCode" id="UserName" hidden required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎓 مدرک تحصیلی</label>
                            <input asp-for="DriverUpdateDto.Education" class="form-control form-control-lg" data-val="false" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🎓 شماره گواهینامه</label>
                            <input asp-for="DriverUpdateDto.CertificateId" class="form-control form-control-lg" data-val="false" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">📝 توضیحات</label>
                            <textarea asp-for="DriverUpdateDto.Descriptions" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🏠 آدرس</label><label style="color:red;font-size:20px">*</label>
                            <textarea asp-for="DriverUpdateDto.Address" class="form-control" rows="2" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🆔 شماره پرونده</label>
                            <textarea asp-for="DriverUpdateDto.Code" class="form-control" rows="2"></textarea>
                        </div>
                    
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">🔒 رمز عبور</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="UserUpdateDto.PasswordHash" type="password" id="password" class="form-control form-control-lg" minlength="8" required />
                            <span id="passwordHelp"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">📞 شماره تماس</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="UserUpdateDto.Mobile" class="form-control form-control-lg" required />
                        </div>
                        <h5 class="text-info"><i class="bi bi-bank2"></i> مشخصات حساب بانکی</h5>
                        <div class="mb-3">
                            <label class="form-label">🏦 شماره حساب</label>
                            <input asp-for="DriverUpdateDto.BankRef" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">🔢 شماره شبا/کارت</label><label style="color:red;font-size:20px">*</label>
                            <input asp-for="DriverUpdateDto.BankAccountNumber" class="form-control form-control-lg" />
                        </div>
                    </div>
                </div>
                <hr />
                <h5 class="text-info"><i class="bi bi-clock"></i> ویرایش شیفت‌ها</h5>
                <div class="mb-6">
                    <label class="form-label">شیفت‌های قابل انتخاب و تعداد صندلی:</label>
                    <input type="text" id="shiftFilter" class="form-control mb-2" placeholder="جستجو شیفت..." onkeyup="filterShifts()" />
                    <table class="table table-bordered table-dark table-striped" id="shiftTable">
                        <thead>
                            <tr>
                                <th>انتخاب</th>
                                <th>مدرسه</th>
                                <th>نام شیفت</th>
                                <th>زمان شروع</th>
                                <th>زمان پایان</th>
                                <th>تعداد صندلی</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var shift in allShifts.OrderByDescending(s => driverShifts.Any(ds => ds.ShiftRef == s.Id)))
                            {
                                var assigned = driverShifts.FirstOrDefault(ds => ds.ShiftRef == shift.Id);
                                <tr class="shift-row @(assigned != null ? "table-success" : "")">
                                    <td>
                                        <input class="form-check-input shift-checkbox" type="checkbox" name="SelectedShiftIds" value="@shift.Id" id="shift_@shift.Id"
                                               @(assigned != null ? "checked" : "") onchange="toggleSeatInput(@shift.Id)" />
                                    </td>
                                    <td>@SchoolService.GetSchool(shift.SchoolRef).Name</td>
                                    <td>
                                        <label class="form-check-label" for="shift_@shift.Id">
                                            @shift.Name
                                        </label>
                                    </td>
                                    <td>@shift.Start</td>
                                    <td>@shift.End</td>
                                    <td>
                                        <input type="number" name="ShiftSeats_@shift.Id" id="seat_@shift.Id" class="form-control"
                                               style="width:90px;display:inline-block;" min="1" max="99" placeholder="صندلی"
                                               value="@(assigned?.Seats ?? 1)" @(assigned == null ? "disabled" : "") required />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <script>
                    function toggleSeatInput(shiftId) {
                        var checkbox = document.getElementById('shift_' + shiftId);
                        var seatInput = document.getElementById('seat_' + shiftId);
                        seatInput.disabled = !checkbox.checked;
                        if (!checkbox.checked) seatInput.value = '';
                    }
                    function filterShifts() {
                        var input = document.getElementById('shiftFilter');
                        var filter = input.value.toLowerCase();
                        var rows = document.querySelectorAll('#shiftTable .shift-row');
                        rows.forEach(function(row) {
                            var label = row.querySelector('.form-check-label').textContent.toLowerCase();
                            if (label.indexOf(filter) > -1) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        });
                    }
                </script>
                <div class="form-group text-center mt-4 d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-success col-md-2">
                        <i class="bi bi-save2 me-1"></i> ذخیره
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function FillHidden(){
            document.getElementById('UName').value = document.getElementById('DName').value;
            document.getElementById('ULastName').value = document.getElementById('DLastName').value;
        document.getElementById('UserName').value = document.getElementById('DserName').value;
        }
        // Password validation
        document.getElementById('password').addEventListener('input', function(e) {
            const passwordHelp = document.getElementById('passwordHelp');
            if (this.value.length < 8) {
                this.classList.remove('border-success', 'is-valid');
                this.classList.add('border-danger', 'is-invalid');
                passwordHelp.textContent = 'رمز عبور باید حداقل ۸ کاراکتر داشته باشد';
                passwordHelp.className = 'form-text text-danger';
            } else {
                this.classList.remove('border-danger', 'is-invalid');
                this.classList.add('border-success', 'is-valid');
                passwordHelp.textContent = 'رمز عبور معتبر است';
                passwordHelp.className = 'form-text text-success';
            }
        });
    </script>
}