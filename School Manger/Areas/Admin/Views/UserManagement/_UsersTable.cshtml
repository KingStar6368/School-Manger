@using School_Manger.Models
@model List<LoginUser>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>ردیف</th>
            <th>نام کاربری</th>
            <th>شماره تماس</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Select((u, i) => new { User = u, Index = i + 1 }))
        {
            <tr>
                <td>@user.Index</td>
                <td>@user.User.UserName</td>
                <td>@user.User.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.User.Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil">تغییر</i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.User.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash">حدف</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>