@model (string,string)
@{
    ViewData["Title"] = "لینک منقضی شده";
}
<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 bg-dark p-4">
    <div class="card bg-dark text-white shadow-lg rounded-4 border-warning border-2" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-warning bg-gradient text-center rounded-top-4 py-4">
            <h3 class="mb-0 fw-bold text-dark">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> لینک منقضی شده
            </h3>
        </div>
        <div class="card-body p-4 text-center">
            <div class="mb-4">
                <i class="bi bi-clock-history text-warning fs-1 mb-3 d-block"></i>
                <h4 class="text-warning fw-bold mb-3">والد گرامی</h4>
                <p class="lead text-white-50">لینک مورد نظر منقضی شده است</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.Item1) && !string.IsNullOrEmpty(Model.Item2))
            {
                <div class="alert alert-warning border-warning rounded-3">
                    <div class="row g-3 text-center">
                        <div class="col-md-6">
                            <div class="p-3">
                                <i class="bi bi-calendar-start text-warning fs-4 d-block mb-2"></i>
                                <h6 class="fw-bold mb-1">تاریخ شروع</h6>
                                <p class="mb-0 fw-bold fs-5">@Model.Item1</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3">
                                <i class="bi bi-calendar-x text-warning fs-4 d-block mb-2"></i>
                                <h6 class="fw-bold mb-1">تاریخ انقضا</h6>
                                <p class="mb-0 fw-bold fs-5">@Model.Item2</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top border-warning">
                        <i class="bi bi-info-circle me-2"></i>
                        <span class="fw-semibold">این لینک در بازه زمانی فوق اعتبار داشته است</span>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info border-info rounded-3">
                    <i class="bi bi-info-circle me-2"></i>
                    <span>لینک مورد نظر معتبر نمی‌باشد</span>
                </div>
            }

            <div class="mt-4 pt-3 border-top border-secondary">
                <p class="text-white-50 mb-3">برای دسترسی به لینک معتبر، لطفا با پشتیبانی تماس بگیرید</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house me-1"></i> بازگشت به خانه
                    </a>
                    <a href="/Support" class="btn btn-outline-warning">
                        <i class="bi bi-headset me-1"></i> تماس با پشتیبانی
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert {
        background-color: rgba(255, 193, 7, 0.1);
        border: 1px solid #ffc107;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

    @@media (max-width: 576px) {
        .d-flex.justify-content-center.gap-3 {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .card-body {
            padding: 1.5rem;
        }
    }
</style>