@using School_Manger.Models.ParentViews
@{
    ViewData["Title"] = "مدیریت فرزندان";
    Layout = "_Layout";
}

@model ParentDashbordView

<div class="container-fluid bg-dark text-white" dir="rtl">
    <!-- Header Section -->
    <div class="row py-4 bg-black">
        <div class="col-12 text-center">
            <h3>اطلاعات والدین</h3>
            <div class="d-flex justify-content-center gap-5 mt-3">
                <div>
                    <span class="fs-5">نام:</span>
                    <span class="fs-3">@Model.Parent.ParentFirstName</span>
                </div>
                <div>
                    <span class="fs-5 text-light">نام خانوادگی:</span>
                    <span class="fs-3">@Model.Parent.ParentLastName</span>
                </div>
                <div>
                    <span class="fs-5 text-light">کد ملی:</span>
                    <span class="fs-3">@Model.Parent.ParentNationalCode</span>
                </div>
                <div>
                    @{
                        if (Model.Parent.Children.All(x => x.HasPaid))
                        {
                            <span class="badge bg-success fs-3 text-light">حساب شما تصویه است</span>
                        }
                        else
                        {
                            <span class="fs-5 text-light">مبالغ پرداخت نشده:</span>
                            <span class="badge bg-danger fs-3">
                                @Model.Parent.Children.Sum(x=>x.Bills.Where(b=>!b.HasPaId).Sum(b=>b.TotalPrice - b.PaidPrice))
                            </span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Add Child Button -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addChildModal">
                <i class="bi bi-plus-circle"></i> +افزودن فرزند
            </button>
        </div>
    </div>

    <!-- Children List -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ردیف</th>
                            <th>نام</th>
                            <th>نام خانوادگی</th>
                            <th>مقطع تحصیلی</th>
                            <th>کد ملی</th>
                            <th>تاریخ تولد</th>
                            <th>وضعیت پرداخت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var child in Model.Parent.Children)
                        {
                            <tr>
                                <td>@(Model.Parent.Children.IndexOf(child) + 1)</td>
                                <td>@child.FirstName</td>
                                <td>@child.LastName</td>
                                <td>@child.Class</td>
                                <td>@child.NationalCode</td>
                                <td>@child.BirthDate.ToString("yyyy/MM/dd")</td>
                                <td>
                                    @if (child.HasPaid)
                                    {
                                        <span class="badge bg-success">پرداخت شده</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            @child.Bills.Where(x=>!x.HasPaId).Sum(x=>x.TotalPrice - x.PaidPrice) پرداخت نشده
                                        </span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-warning"
                                    onclick="editChild('@child.Id')">
                                        <i class="bi bi-pencil"></i> ویرایش
                                    </button>
                                    <form asp-action="RemoveChild" method="post">
                                        <input style="display:none" value="@child.Id" asp-for="@Model.SelectedChild.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> حذف
                                        </button>
                                    </form>
                                    <form asp-action="Bills">
                                        <input style="display:none" asp-for="@Model.SelectedChild.Id" value="@child.Id"/>
                                        @if (!child.HasPaid)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-primary">پرداخت</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-primary">مشاهد قبض ها</button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Child Modal -->
<div class="modal fade" id="addChildModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title">افزودن فرزند جدید</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="LocationSelector" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label  class="form-label">نام فرزند</label>
                        <input asp-for="SelectedChild.FirstName" type="text" class="form-control bg-secondary text-white" id="childFirstName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">نام خانوادگی</label>
                        <input asp-for="SelectedChild.LastName" type="text" class="form-control bg-secondary text-white" id="childLastName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">کد ملی</label>
                        <input asp-for="SelectedChild.NationalCode" type="text" class="form-control bg-secondary text-white" id="childNationalCode"
                               pattern="\d{10}" maxlength="10" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">مقطع تحصیلی</label>
                        <input asp-for="SelectedChild.Class" type="text" class="form-control bg-secondary text-white" id="childLastName" required>
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">تاریخ تولد</label>
                        <input asp-for ="SelectedChild.BirthDate" type="date" class="form-control bg-secondary text-white" id="childBirthDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">زمان رفت</label>
                        <input asp-for="SelectedChild.Path.PickTime1" type="time" class="form-control bg-secondary text-white" id="picktime1" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">زمان بازگشت</label>
                        <input asp-for="SelectedChild.Path.PickTime2" type="time" class="form-control bg-secondary text-white" id="picktime2" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Persian date picker if needed
        $(document).ready(function() {
            // This would initialize a Persian date picker if you include the library
            // $('#childBirthDate').persianDatepicker({...});
        });
    </script>
}

<style>
    /* Custom styles */
    .table {
        border-color: #444;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.65em;
    }

    .btn-close-white {
        filter: invert(1);
    }

    /* Responsive table */
    @@media (max-width: 768px) {
        .table-responsive {
            overflow-x: auto;
        }
    }
</style>