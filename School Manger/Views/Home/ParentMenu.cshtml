@{
    ViewData["Title"] = "مدیریت فرزندان";
    Layout = "_Layout";
}

@model Parent 

<div class="container-fluid bg-dark text-white" dir="rtl">
    <!-- Header Section -->
    <div class="row py-4 bg-black">
        <div class="col-12 text-center">
            <h3>اطلاعات والدین</h3>
            <div class="d-flex justify-content-center gap-5 mt-3">
                <div>
                    <span class="fs-5">نام:</span>
                    <span class="fs-3">@Model.ParentFirstName</span>
                </div>
                <div>
                    <span class="fs-5 text-light">نام خانوادگی:</span>
                    <span class="fs-3">@Model.ParentLastName</span>
                </div>
                <div>
                    <span class="fs-5 text-light">کد ملی:</span>
                    <span class="fs-3">@Model.ParentNationalCode</span>
                </div>
                <div>
                    @{
                        // if(Model.TotalPrice <= 0)
                        // {
                            <span class="badge bg-success fs-3 text-light">حساب شما تصویه است</span>
                        // }
                        // else
                        // {
                        //     <span class="fs-5 text-light">مبالغ پرداخت نشده:</span>
                        //     <span class="badge bg-danger fs-3">@Model.TotalPrice</span>
                        // }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Add Child Button -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addChildModal">
                <i class="bi bi-plus-circle"></i> افزودن فرزند
            </button>
        </div>
    </div>

    <!-- Children List -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ردیف</th>
                            <th>نام</th>
                            <th>نام خانوادگی</th>
                            <th>کد ملی</th>
                            <th>تاریخ تولد</th>
                            <th>وضعیت پرداخت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var child in Model.Children)
                        {
                            <tr>
                                <td>@(Model.Children.IndexOf(child) + 1)</td>
                                <td>@child.FirstName</td>
                                <td>@child.LastName</td>
                                <td>@child.NationalCode</td>
                                <td>@child.BirthDate</td>
                                <td>
                                  @*   @if (child.HasPaid)
                                    { *@
                                        <span class="badge bg-success">پرداخت شده</span>
                        @*             }
                                    else
                                    {
                                        <span class="badge bg-danger">@child.Price پرداخت نشده</span>
                                    } *@
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-warning"
                                            onclick="editChild('@child.Id')">
                                        <i class="bi bi-pencil"></i> ویرایش
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger"
                                            onclick="deleteChild('@child.Id')">
                                        <i class="bi bi-trash"></i> حذف
                                    </button>
                                    @if (!child.HasPaid)
                                    {
                                        <button class="btn btn-sm btn-outline-primary"
                                                onclick="payForChild('@child.Id')">
                                            <i class="bi bi-credit-card"></i> پرداخت
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Child Modal -->
<div class="modal fade" id="addChildModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title">افزودن فرزند جدید</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="LocationSelector" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="childFirstName" class="form-label">نام فرزند</label>
                        <input type="text" class="form-control bg-secondary text-white" id="childFirstName" name="FirstName" required>
                    </div>
                    <div class="mb-3">
                        <label for="childLastName" class="form-label">نام خانوادگی</label>
                        <input type="text" class="form-control bg-secondary text-white" id="childLastName" name="LastName" required>
                    </div>
                    <div class="mb-3">
                        <label for="childNationalCode" class="form-label">کد ملی</label>
                        <input type="text" class="form-control bg-secondary text-white" id="childNationalCode" name="NationalCode"
                               pattern="\d{10}" maxlength="10" required>
                    </div>
                    <div class="mb-3">
                        <label for="childBirthDate" class="form-label">تاریخ تولد</label>
                        <input type="date" class="form-control bg-secondary text-white" id="childBirthDate" name="BirthDate" required>
                    </div>
                    <div class="mb-3">
                        <label for="picktime1" class="form-label">زمان رفت</label>
                        <input type="time" class="form-control bg-secondary text-white" id="picktime1" name="picktime1" required>
                    </div>
                    <div class="mb-3">
                        <label for="picktime2" class="form-label">زمان بازگشت</label>
                        <input type="time" class="form-control bg-secondary text-white" id="picktime2" name="picktime2" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Edit child function
        function editChild(childId) {
            // Implement edit functionality
            alert('ویرایش فرزند با شناسه: ' + childId);
            // You would typically open a modal or redirect to edit page
        }

        // Delete child function
        function deleteChild(childId) {
            if (confirm('آیا از حذف این فرزند مطمئن هستید؟')) {
                // Implement delete functionality
                fetch(`/Parent/DeleteChild/${childId}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('خطا در حذف فرزند');
                    }
                });
            }
        }

        // Pay for child function
        function payForChild(childId) {
            // Implement payment functionality
            alert('پرداخت برای فرزند با شناسه: ' + childId);
            // You would typically redirect to payment page
        }

        // Initialize Persian date picker if needed
        $(document).ready(function() {
            // This would initialize a Persian date picker if you include the library
            // $('#childBirthDate').persianDatepicker({...});
        });
    </script>
}

<style>
    /* Custom styles */
    .table {
        border-color: #444;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.65em;
    }

    .btn-close-white {
        filter: invert(1);
    }

    /* Responsive table */
    @@media (max-width: 768px) {
        .table-responsive {
            overflow-x: auto;
        }
    }
</style>