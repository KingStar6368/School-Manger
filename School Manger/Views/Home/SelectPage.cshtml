@{
    Layout = "_Layout";
    ViewData["Title"] = "ورود به سیستم حمل و نقل مدرسه سرویس یار";
}

<div class="container-fluid d-flex justify-content-center align-items-center vh-100 bg-gradient-dark">
    <div class="card glass-morphism shadow-xl" style="width: 100%; max-width: 650px; border: none;">
        <div class="card-body p-5">
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="logo-container mb-4">
                    <i class="bi bi-bus-front fs-1 text-gradient-primary mb-3"></i>
                </div>
                <h1 class="fw-bold text-white mb-2">سرویس یار</h1>
                <p class="text-light fs-5 mb-0">سامانه حمل و نقل مدرسه</p>
                <div class="divider my-4"></div>
                <p class="text-light-50 fs-6">لطفا نقش خود را انتخاب کنید</p>
            </div>

            <!-- Role Selection -->
            <div class="row g-4">
                <div class="col-md-6">
                    <a asp-action="Login" class="card role-card bg-dark text-white text-center border-0 p-4 h-100 hover-lift transition-all">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="icon-wrapper bg-primary-20 p-4 rounded-circle mb-4">
                                <i class="bi bi-people-fill fs-2 text-primary"></i>
                            </div>
                            <h3 class="fw-bold mb-3">والدین</h3>
                            <p class="text-light-50 mb-0">مدیریت سرویس و پیگیری دانش‌آموز</p>
                            <div class="mt-4">
                                <span class="btn btn-sm btn-outline-primary rounded-pill px-3">ورود</span>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a asp-action="Login" asp-controller="Driver" class="card role-card bg-dark text-white text-center border-0 p-4 h-100 hover-lift transition-all">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="icon-wrapper bg-success-20 p-4 rounded-circle mb-4">
                                <i class="bi bi-car-front fs-2 text-success"></i>
                            </div>
                            <h3 class="fw-bold mb-3">رانندگان</h3>
                            <p class="text-light-50 mb-0">مدیریت مسیر و گزارش‌گیری سفر</p>
                            <div class="mt-4">
                                <span class="btn btn-sm btn-outline-success rounded-pill px-3">ورود</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom Dark Theme Variables */
    :root {
     
        --primary-color: #6c63ff;
        --primary-dark: #5952d4;
        --success-color: #00d4aa;
        --text-light: #f8f9fa;
        --text-light-50: #adb5bd;
        --text-light-30: #6c757d;
    }

    /* Background Gradient */
    .bg-gradient-dark {
        background: linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-dark) 100%);
        min-height: 100vh;
    }

    /* Glass Morphism Effect */
    .glass-morphism {
        background: rgba(25, 25, 40, 0.8);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    /* Role Cards */
    .role-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.05);
        cursor: pointer;
    }

        .role-card:hover {
            transform: translateY(-8px);
            border-color: rgba(108, 99, 255, 0.3);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.15);
        }

    .hover-lift:hover {
        transform: translateY(-5px);
    }

    .transition-all {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Icon Wrapper */
    .icon-wrapper {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .role-card:hover .icon-wrapper {
        transform: scale(1.1);
    }

    /* Text Gradients */
    .text-gradient-primary {
        background: linear-gradient(45deg, var(--primary-color), #a463f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Divider */
    .divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(108, 99, 255, 0.5), transparent);
        width: 80%;
        margin: 0 auto;
    }

    /* Color Utilities */
    .bg-primary-20 {
        background-color: rgba(108, 99, 255, 0.15);
    }

    .bg-success-20 {
        background-color: rgba(0, 212, 170, 0.15);
    }

    .bg-dark-2 {
        background-color: var(--bg-dark);
    }

    .text-light {
        color: var(--text-light);
    }

    .text-light-50 {
        color: var(--text-light-50);
    }

    .text-light-30 {
        color: var(--text-light-30);
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .card-body {
            padding: 2rem !important;
        }

        .role-card {
            margin-bottom: 1rem;
        }

        .icon-wrapper {
            width: 70px;
            height: 70px;
            padding: 1rem !important;
        }
    }

    @@media (max-width: 576px) {
        .card-body {
            padding: 1.5rem !important;
        }

        h1 {
            font-size: 1.75rem;
        }
    }

    /* Smooth Animations */
    .card {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">