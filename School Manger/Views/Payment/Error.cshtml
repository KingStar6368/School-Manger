@using School_Manager.Core.Services.Interfaces
@using School_Manger.PaymentService;
@model string
@{
    Layout = "_Layout";
}

<div class="card bg-dark text-white shadow-lg rounded-4 border-danger border-2">
    <div class="card-header bg-danger bg-gradient d-flex justify-content-between align-items-center py-3">
        <h4 class="mb-0 fw-bold">
            <i class="bi bi-x-circle-fill me-2"></i> عملیات ناموفق
        </h4>
        <span class="badge bg-light text-danger fs-6">
            <i class="bi bi-credit-card me-1"></i> پرداخت ناموفق
        </span>
    </div>
    <div class="card-body">
        <div class="text-center mb-4">
            <i class="bi bi-exclamation-triangle text-warning fs-1 mb-3 d-block"></i>
            <h3 class="text-warning fw-bold">پرداخت انجام نشد</h3>
            <p class="text-white-50">متاسفانه عملیات پرداخت با مشکل مواجه شد</p>
        </div>

        <div class="alert alert-danger border-danger mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-receipt-cutoff fs-4 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">شناسه تراکنش</h5>
                    <p class="mb-0 fw-bold fs-5">@Model.Replace("0000", "")</p>
                </div>
            </div>
        </div>

        <div class="alert alert-warning border-warning">
            <div class="d-flex">
                <i class="bi bi-info-circle fs-5 me-3 mt-1"></i>
                <div>
                    <h6 class="alert-heading">علل احتمالی:</h6>
                    <ul class="mb-0 ps-3">
                        <li>عدم موجودی کافی در حساب</li>
                        <li>مشکل در ارتباط با درگاه پرداخت</li>
                        <li>لغو پرداخت توسط کاربر</li>
                        <li>مشکل در اطلاعات کارت بانکی</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
            <a href="/" class="btn btn-primary">
                <i class="bi bi-house me-1"></i> بازگشت به خانه
            </a>
            <a href="/Payment/Retry" class="btn btn-warning">
                <i class="bi bi-arrow-clockwise me-1"></i> تلاش مجدد
            </a>
            <a href="/Support" class="btn btn-outline-light">
                <i class="bi bi-headset me-1"></i> پشتیبانی
            </a>
        </div>

        <div class="text-center mt-4 pt-3 border-top border-secondary">
            <small class="text-white-50">
                <i class="bi bi-clock-history me-1"></i>
                در صورت کسر مبلغ از حساب، طی ۷۲ ساعت به حساب شما باز خواهد گشت
            </small>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 2rem auto;
    }

    .alert ul {
        margin-bottom: 0;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }

    @@media (max-width: 576px) {
        .d-flex.justify-content-center.gap-3 {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }
</style>