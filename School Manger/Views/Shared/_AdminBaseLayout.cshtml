@using System.Text.Json
@using System.Collections.Generic
@{
    Layout = "_AdminBaseLayout";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - پنل مدیریت</title>
    <style>
        .sidebar {
            height: 100vh;
            background-color: #1a1a1a;
            position: fixed;
            width: 250px;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                border-right: 3px solid transparent;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    color: #fff;
                    background-color: #343a40;
                    border-right-color: #0d6efd;
                }

        .main-content {
            margin-right: 250px;
            padding: 20px;
            transition: all 0.3s;
            min-height: 100vh;
            background-color: #1a1a1a;
        }

        .top-navbar {
            background-color: #212529;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        /* Prevent horizontal scroll */
        html, body {
            overflow-x: hidden;
            max-width: 100%;
        }

        .main-content .container-fluid {
            max-width: 100%;
            padding-right: 0;
            padding-left: 0;
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- REMOVED duplicate Bootstrap CSS since it's already in _AdminBaseLayout -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>
<body style="background-color: #1a1a1a;">
    @{
        List<Notification> notifications = null;
        if (TempData["Notifications"] is string jsonNotifications && !string.IsNullOrEmpty(jsonNotifications))
        {
            try
            {
                notifications = JsonSerializer.Deserialize<List<Notification>>(jsonNotifications);
            }
            catch
            {
                notifications = new List<Notification>();
            }
        }
        else if (TempData["Notification"] is string jsonNotification && !string.IsNullOrEmpty(jsonNotification))
        {
            try
            {
                var single = JsonSerializer.Deserialize<Notification>(jsonNotification);
                notifications = single != null ? new List<Notification> { single } : new List<Notification>();
            }
            catch
            {
                notifications = new List<Notification>();
            }
        }

        if (notifications == null)
        {
            notifications = new List<Notification>();
        }
    }

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar p-3">
            <h4 class="text-white mb-4">پنل مدیریت مدرسه</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Parents" ? "active" : "")" href="/Admin/Parents">
                        <i class="bi bi-person-arms-up me-2"></i> والدین
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Pays") ? "active" : "")"
                       asp-area="Admin" asp-controller="Pays" asp-action="Index">
                        <i class="bi bi-credit-card me-2"></i> پرداختی‌ها
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "School" ? "active" : "")" href="/Admin/School">
                        <i class="bi bi-building me-2"></i> مدارس
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Driver" ? "active" : "")" href="/Admin/Driver">
                        <i class="bi bi-car-front-fill me-2"></i> رانندگان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Search" ? "active" : "")" href="/Admin/Search">
                        <i class="bi bi-search me-2"></i> جستجو
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Debtor" ? "active" : "")" href="/Admin/Debtor">
                        <i class="bi bi-cash-coin me-2"></i> بدهکاران
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Sms") ? "active" : "")"
                       asp-area="Admin" asp-controller="Sms" asp-action="Index">
                        <i class="bi bi-chat-left-text me-2"></i> پنل پیامک
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/ParentUser") ? "active" : "")"
                       asp-area="Admin" asp-controller="UserManagement" asp-action="Parents">
                        <i class="bi bi-person-plus me-2"></i> کاربر والدین
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/DriverUser") ? "active" : "")"
                       asp-area="Admin" asp-controller="UserManagement" asp-action="Drivers">
                        <i class="bi bi-person-badge me-2"></i> کاربر رانندگان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Tariff") ? "active" : "")"
                       asp-area="Admin" asp-controller="Tariff" asp-action="Index">
                        <i class="bi bi-currency-exchange me-2"></i> تنظیمات تعرفه
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Setting") ? "active" : "")"
                       asp-area="Admin" asp-controller="Setting" asp-action="Index">
                        <i class="bi bi-gear-fill me-2"></i> تنظیمات
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Report") ? "active" : "")"
                       asp-area="Admin" asp-controller="Report" asp-action="Index">
                        <i class="bi bi-graph-up me-2"></i> گزارش
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content w-100">
            <!-- Top Navbar -->
            <nav class="navbar top-navbar mb-4">
                <div class="container-fluid">
                    <button class="btn btn-dark" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="d-flex align-items-center">
                        <span class="text-white me-3">مدیر سیستم</span>
                        <div class="dropdown">
                            <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> پروفایل</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-left me-2"></i> خروج</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_NotificationPartial", notifications);

    <script>
        $(document).ready(function() {
            // Initialize Persian datepicker for all elements with class 'persian-date'
            $('.persian-date').persianDatepicker({
                observer: true,
                format: 'YYYY/MM/DD',
                altField: '.gregorian-date',
                altFormat: 'X',
                autoClose: true
            });

            // Notification close functionality
            function closeNotification(notificationElement) {
                notificationElement.style.animation = 'slideOut 0.5s forwards';
                setTimeout(() => {
                    if (notificationElement.parentNode) {
                        notificationElement.remove();
                    }
                }, 500);
            }

            // Close notification when X is clicked - using event delegation
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('close-notification') ||
                    e.target.closest('.close-notification')) {
                    const notification = e.target.closest('.notification');
                    if (notification) {
                        closeNotification(notification);
                    }
                }
            });

            // Auto-close notifications after 5 seconds
            const notifications = document.querySelectorAll('.notification');
            if (notifications && notifications.length) {
                notifications.forEach((notif) => {
                    setTimeout(() => {
                        closeNotification(notif);
                    }, 5000);
                });
            }
        });
    </script>

    @section Scripts {
        <script>
            // Toggle sidebar
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });
        </script>

        @await RenderSectionAsync("PageScripts", required: false)
    }
</body>
    @await RenderSectionAsync("Scripts", required: false)
</html>