@using System.Text.Json
@{
    Layout = "_AdminBaseLayout";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - پنل مدیریت</title>
    <style>
        .sidebar {
            height: 100vh;
            background-color: #1a1a1a;
            position: fixed;
            width: 250px;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                border-right: 3px solid transparent;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    color: #fff;
                    background-color: #343a40;
                    border-right-color: #0d6efd;
                }

        .main-content {
            margin-right: 250px;
            padding: 20px;
            transition: all 0.3s;
        }

        .top-navbar {
            background-color: #212529;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        Notification notification = null;
        if (TempData["Notification"] is string jsonNotification)
        {
            notification = JsonSerializer.Deserialize<Notification>(jsonNotification);
        }
    }

    @ViewContext.RouteData.Values["Controller"].ToString()
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar p-3">
            <h4 class="text-white mb-4">پنل مدیریت مدرسه</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Parents" ? "active" : "")" href="/Admin/Parents">
                        <i class="bi bi-people-fill me-2"></i> والدین
                    </a>
                </li>
                <li class="nav-item">
                    <a style="pointer-events:none;cursor:not-allowed;" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "ParentContract" ? "active" : "")" href="/Admin/ParentContract">
                        <i class="bi bi-file-earmark-text me-2"></i> قرارداد والدین
                    </a>
                </li>
                <li class="nav-item">
                    <a style="pointer-events:none;cursor:not-allowed;" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Student" ? "active" : "")" href="/Admin/Student">
                        <i class="bi bi-mortarboard-fill me-2"></i> دانش آموزان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "School" ? "active" : "")" href="/Admin/School">
                        <i class="bi bi-building me-2"></i> مدارس
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Driver" ? "active" : "")" href="/Admin/Driver">
                        <i class="bi bi-car-front-fill me-2"></i> رانندگان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Search" ? "active" : "")" href="/Admin/Search">
                        <i class="bi bi-search me-2"></i> جستجو
                    </a>
                </li>
                <li class="nav-item">
                    <a style="pointer-events:none;cursor:not-allowed;" class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "DriverContract" ? "active" : "")" href="/Admin/DriverContract">
                        <i class="bi bi-file-earmark-text me-2"></i> قرارداد رانندگان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/ParentUser") ? "active" : "")"
                       asp-area="Admin" asp-controller="UserManagement" asp-action="Parents">
                        <i class="bi bi-person-vcard me-2"></i> یوزر والدین
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/DriverUser") ? "active" : "")"
                       asp-area="Admin" asp-controller="UserManagement" asp-action="Drivers">
                        <i class="bi bi-person-vcard me-2"></i> یوزر رانندگان
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/AssignD2S") ? "active" : "")"
                       asp-area="Admin" asp-controller="AssignD2S" asp-action="Index">
                        <i class="bi bi-person-vcard me-2"></i> اختصاص دادن راننده به دانش آموز
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Tariff") ? "active" : "")"
                       asp-area="Admin" asp-controller="Tariff" asp-action="Index">
                        <i class="bi bi-gear-fill me-2"></i> تنظیمات تعرفه
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Setting") ? "active" : "")"
                       asp-area="Admin" asp-controller="Setting" asp-action="Index">
                        <i class="bi bi-gear-fill me-2"></i> تنظیمات
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content w-100">
            <!-- Top Navbar -->
            <nav class="navbar top-navbar mb-4">
                <div class="container-fluid">
                    <button class="btn btn-dark" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="d-flex align-items-center">
                        <span class="text-white me-3">مدیر سیستم</span>
                        <div class="dropdown">
                            <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> پروفایل</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-left me-2"></i> خروج</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>


    @await Html.PartialAsync("_NotificationPartial", notification);

    <script>
        $(document).ready(function() {
            // Initialize Persian datepicker for all elements with class 'persian-date'
            $('.persian-date').persianDatepicker({
                observer: true,  // Automatically detects new date inputs added dynamically
                format: 'YYYY/MM/DD',
                altField: '.gregorian-date',
                altFormat: 'X',  // Unix timestamp
                autoClose: true
            });
        });
    </script>

    @section Scripts {
        <script>
            // Toggle sidebar
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $('.main-content').toggleClass('active');
            });
        </script>

        @await RenderSectionAsync("PageScripts", required: false)
    }
</body>
    @await RenderSectionAsync("Scripts", required: false)
</html> 