@using School_Manager.Core.Services.Interfaces
@inject ISettingService setting

@{
    var logoBytes = setting.GetImage("LogoPath");
    var logoUrl = logoBytes != null ? $"data:image/png;base64,{Convert.ToBase64String(logoBytes)}" : "";
}

<header class="bg-dark text-white border-bottom border-primary shadow-sm">
    <!-- Main Header -->
    <div class="container py-3">
        <div class="row align-items-center">
            <!-- Logo and Company Name -->
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(logoUrl))
                    {
                        <img src="@logoUrl" alt="@setting.Get("CompanyName")" class="me-3" style="height: 50px; max-width: 120px; object-fit: contain;">
                    }
                    else
                    {
                        <div class="bg-primary rounded-3 p-2 me-3">
                            <i class="bi bi-building fs-4 text-white"></i>
                        </div>
                    }
                    <div>
                        <h1 class="h4 mb-0 fw-bold text-white">
                            <i class="bi bi-building me-2 text-primary"></i>@setting.Get("CompanyName")
                        </h1>
                        @if (!string.IsNullOrEmpty(setting.Get("CompanySlogan")))
                        {
                            <p class="mb-0 text-white-50 small">
                                <i class="bi bi-quote me-1"></i>@setting.Get("CompanySlogan")
                            </p>
                        }
                    </div>
                </div>
            </div>

           @*  <!-- Contact Information -->
            <div class="col-md-6 text-md-end">
                <div class="d-flex flex-column flex-md-row justify-content-md-end gap-3">
                    @if (!string.IsNullOrEmpty(setting.Get("CompanyPhone")))
                    {
                        <div class="d-flex align-items-center justify-content-center justify-content-md-end">
                            <i class="bi bi-telephone-fill text-success me-2"></i>
                            <span class="fw-semibold">@setting.Get("CompanyPhone")</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(setting.Get("CompanyStaticPhone")))
                    {
                        <div class="d-flex align-items-center justify-content-center justify-content-md-end">
                            <i class="bi bi-telephone text-info me-2"></i>
                            <span class="fw-semibold">@setting.Get("CompanyStaticPhone")</span>
                        </div>
                    }
                </div>
            </div> *@
        </div>
    </div>

    <!-- Secondary Info Bar -->
    <div class="bg-black text-white-50 py-2 border-top border-secondary">
        <div class="container">
            <div class="row text-center">
                <!-- Company Owner -->
                <div class="col-lg-3 col-md-6 mb-2 mb-md-0">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-person-badge text-warning me-2"></i>
                        <span>مدیریت: @setting.Get("CompanyOwner")</span>
                    </div>
                </div>
                
                <!-- Company Address -->
                <div class="col-lg-3 col-md-6 mb-2 mb-md-0">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-geo-alt text-primary me-2"></i>
                        <span class="text-truncate" title="@setting.Get("CompanyAddress")">
                            @setting.Get("CompanyAddress")
                        </span>
                    </div>
                </div>
                
                <!-- Working Hours -->
                <div class="col-lg-3 col-md-6 mb-2 mb-md-0">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-clock text-success me-2"></i>
                        <span>ساعات کاری: ۸:۰۰ - ۱۷:۰۰</span>
                    </div>
                </div>
                
                <!-- Support Status -->
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex align-items-center justify-content-center">
                        <i class="bi bi-headset text-info me-2"></i>
                        <span>پشتیبانی آنلاین</span>
                        <span class="badge bg-success ms-2">
                            <i class="bi bi-circle-fill me-1"></i>فعال
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<style>
    .header-contact-item {
        transition: all 0.3s ease;
    }
    
    .header-contact-item:hover {
        transform: translateY(-1px);
    }
    
    /* Logo hover effect */
    img[alt*="CompanyName"] {
        transition: transform 0.3s ease;
    }
    
    img[alt*="CompanyName"]:hover {
        transform: scale(1.05);
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .container.py-3 {
            padding-top: 1rem !important;
            padding-bottom: 1rem !important;
        }
        
        .d-flex.align-items-center {
            justify-content: center;
            text-align: center;
            margin-bottom: 1rem;
        }
        
        .text-md-end {
            text-align: center !important;
        }
        
        .bg-black .row .col-lg-3 {
            margin-bottom: 0.5rem;
        }
    }
    
    @@media (max-width: 576px) {
        h1.h4 {
            font-size: 1.1rem !important;
        }
        
        .bg-black .d-flex {
            font-size: 0.8rem;
        }
        
        .badge {
            font-size: 0.7rem;
        }
    }
    
    /* Smooth animations */
    header {
        animation: slideDown 0.5s ease-out;
    }
    
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Text truncation for long addresses */
    .text-truncate {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<script>
    // Add interactive functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Add click to copy functionality for phone numbers
        // const phoneElements = document.querySelectorAll('[class*="bi-telephone"]');
        // phoneElements.forEach(phone => {
        //     phone.closest('.d-flex').addEventListener('click', function() {
        //         const phoneNumber = this.querySelector('span').textContent;
        //         copyToClipboard(phoneNumber);
        //         showCopyFeedback(this, 'شماره تماس کپی شد');
        //     });
        // });
        
        // Add hover effect for company address with full tooltip
        const addressElement = document.querySelector('[title]');
        if (addressElement) {
            addressElement.addEventListener('mouseenter', function() {
                this.classList.add('text-decoration-underline');
            });
            
            addressElement.addEventListener('mouseleave', function() {
                this.classList.remove('text-decoration-underline');
            });
        }
    });
    
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            console.log('Text copied to clipboard');
        }).catch(err => {
            console.error('Failed to copy text: ', err);
        });
    }
    
    function showCopyFeedback(element, message) {
        const originalHTML = element.innerHTML;
        element.innerHTML = `<i class="bi bi-check-circle text-success me-2"></i><span>${message}</span>`;
        element.style.color = '#198754';
        
        setTimeout(() => {
            element.innerHTML = originalHTML;
            element.style.color = '';
        }, 2000);
    }
</script>