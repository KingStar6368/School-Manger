@using System.Text.Json
@using System.Collections.Generic
<!DOCTYPE html>
<html dir="rtl" lang="fa">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>@ViewData["Title"] - سرویس یار</title>
        <script type="importmap"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/School_Manger.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        <link href="~/css/persian-datepicker.min.css" rel="stylesheet" />

        @RenderSection("Styles", required: false)
    </head>
    <body>

        @{
            // Build a single list of notifications from TempData (supports old single key and new list key)
            List<Notification> notifications = new List<Notification>();

            if (TempData["Notifications"] is string jsonNotifications && !string.IsNullOrEmpty(jsonNotifications))
            {
                try
                {
                    notifications = JsonSerializer.Deserialize<List<Notification>>(jsonNotifications) ?? new List<Notification>();
                }
                catch
                {
                    notifications = new List<Notification>();
                }
            }
            else if (TempData["Notification"] is string jsonNotification && !string.IsNullOrEmpty(jsonNotification))
            {
                try
                {
                    var single = JsonSerializer.Deserialize<Notification>(jsonNotification);
                    if (single != null) notifications.Add(single);
                }
                catch
                {
                    // ignore
                }
            }
        }

        @await Html.PartialAsync("_Header")

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        @await Html.PartialAsync("_Footer")

        <!-- Render notification partial here -->
        @await Html.PartialAsync("_NotificationPartial", notifications)

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="~/js/persian-date.min.js"></script>
        <script src="~/js/persian-datepicker.min.js"></script>

        @await RenderSectionAsync("Scripts", required: false)

        <script>
            $(document).ready(function() {
                // Initialize Persian datepicker for all elements with class 'persian-date'
                $('.persian-date').persianDatepicker({
                    observer: true,
                    format: 'YYYY/MM/DD',
                    altField: '.gregorian-date',
                    altFormat: 'X',
                    autoClose: true
                });

                function closeNotification(notificationElement) {
                    notificationElement.style.animation = 'slideOut 0.5s forwards';
                    setTimeout(() => {
                        if (notificationElement.parentNode) {
                            notificationElement.remove();
                        }
                    }, 500);
                }

                // Close notification when X is clicked - using event delegation
                document.addEventListener('click', function(e) {
                    if (e.target.classList.contains('close-notification') || e.target.closest('.close-notification')) {
                        const notification = e.target.closest('.notification');
                        if (notification) {
                            closeNotification(notification);
                        }
                    }
                });

                // Auto-close notifications after 5 seconds
                const notifications = document.querySelectorAll('.notification');
                if (notifications && notifications.length) {
                    notifications.forEach((notif) => {
                        setTimeout(() => {
                            closeNotification(notif);
                        }, 5000);
                    });
                }
            });
        </script>
    </body>
</html>